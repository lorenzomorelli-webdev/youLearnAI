# OpenAI API Key - Required for GPT summarization and Whisper transcription
# Get your API key from https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# Deepseek API Key - Optional, for alternative summarization
# Get your API key from https://deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Telegram Bot Token - Required
# Get your token from @BotFather on Telegram
TELEGRAM_TOKEN=your_telegram_bot_token_here

# SmartProxy Configuration - Optional, helps bypass YouTube restrictions
# Set USE_PROXY to true to enable proxy for YouTube requests
USE_PROXY=false
PROXY_USERNAME=your_smartproxy_username
PROXY_PASSWORD=your_smartproxy_password
PROXY_HOST=gate.smartproxy.com
PROXY_PORT=10001 

# Debug mode for local testing
DEBUG_MODE=false
FORCE_PROXY=false

# Whitelist configuration
ALLOWED_USERS=1234567890,9876543210